#!/bin/sh

[ -n "$APPID" ] || { echo "srf.app.files: APPID not defined" ; exit 1 ; }
[ -n "$APPNAME" ] || { echo "srf.app.files: APPNAME not defined" ; exit 1 ; }

DSTDIR=/media/internal/saverestore/$APPID

if [ "$1" == "info" ] ; then
    
    echo -n '{ "id": "'$APPID'", "title": "'$APPNAME'", '
    if [ -d $DSTDIR ] ; then
	echo '"saved": true }'
    else
	echo '"saved": false }'
    fi

    exit 0

fi
